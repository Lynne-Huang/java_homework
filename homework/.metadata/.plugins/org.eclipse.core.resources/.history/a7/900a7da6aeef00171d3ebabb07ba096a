import java.util.Scanner;

public class calculate {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//4.	虚拟计算器，利用switch语句来判断要惊醒的运算，输入运算数，再输出计算后的结果。
		Scanner a = new Scanner(System.in);
		Scanner b = new Scanner(System.in);
		System.out.println("输入2个数");
		float num1 = a.nextFloat();
		float num2 = b.nextFloat();
		Scanner c = new Scanner(System.in);
		System.out.println("输入一个数选择你需要的运算（1、＋   2、－   3、×  4、÷）");
		int select =c.nextInt();
		double sum=0;
		switch(select)
		{
			case 1:
				sum=num1+num2;
				System.out.println(num1+"+"+num2+"="+sum);break;
			case 2:
				sum=num1-num2;
				System.out.println(num1+"-"+num2+"="+sum);break;
			case 3:
				sum=num1*num2;
				System.out.println(num1+"×"+num2+"="+sum);break;
			case 4:
				sum=num1/num2;
				System.out.println(num1+"÷"+num2+"="+sum);break;
		}
	}

}
